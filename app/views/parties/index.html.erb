   <div class="nav-wrapper grey">
     <a href="#" class="brand-logo center hide-on-med-and-down">Parties </a>
     <ul id="nav-mobile" class="left">
       <li><%= link_to "Orders", orders_path %></a></li>
       <li><%= link_to "Create Party", new_party_path %></a></li>
