<h2>All Orders!</h2>

<%= button_to "Create Orders", new_order_path, method: :get %>

<%= button_to "Admin Menu Options ", foods_path, method: :get %>


<h3>Orders List</h3>
  <ul>
  <% @orders.each do |order| %>
    <li>
    <strong>Order #<%= order.number %></strong>
    <%= order.food.cuisine %>,
    <%= order.food.name %>, For Party #
    <%= order.party.number %> Total: $
    <%= order.food.cost %> <br>
    <%= button_to "Remove", order_path(order), method: :delete%>
    </li>
  <% end %>
  </ul>
